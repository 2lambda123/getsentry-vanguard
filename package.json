{
  "name": "vanguard",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build --sourcemap",
    "build:server": "esbuild --platform=node --bundle --format=cjs ./server.ts --outdir=build --sourcemap=external",
    "build:sourcemaps": "sentry-upload-sourcemaps",
    "db:migrate": "run-p db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev && npx prisma db seed",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "run-p postinstall:*",
    "postinstall:git-hooks": "simple-git-hooks",
    "postinstall:prisma": "pnpx prisma generate",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require dotenv/config ./build/server.js",
    "test": "run-s db:migrate:test test:vitest",
    "test:vitest": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "run-s db:migrate:test test:ci:*",
    "test:ci:vitest": "dotenv -e .env.test -- vitest --no-threads --coverage --reporter=junit --outputFile=junit.xml --reporter=default",
    "typecheck": "tsc -b",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "dependencies": {
    "@faker-js/faker": "^6.3.1",
    "@fontsource/inter": "^5.0.7",
    "@google-cloud/storage": "6.12.0",
    "@prisma/client": "^5.1.1",
    "@radix-ui/colors": "^0.1.9",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toolbar": "^1.0.4",
    "@remix-run/dev": "^1.19.2",
    "@remix-run/eslint-config": "^1.19.2",
    "@remix-run/express": "^1.19.2",
    "@remix-run/node": "^1.19.2",
    "@remix-run/react": "^1.19.2",
    "@sentry/remix": "^7.61.1",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.44.1",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/marked": "^5.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.17.2",
    "@types/nodemailer": "^6.4.9",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.1",
    "autoprefixer": "^10.4.14",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "cuid": "^2.1.8",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^6.0.0",
    "emoji-picker-react": "^3.6.5",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "express": "^4.18.2",
    "happy-dom": "^9.20.3",
    "isbot": "^3.6.13",
    "isomorphic-dompurify": "^1.8.0",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^13.2.3",
    "marked": "^4.3.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
